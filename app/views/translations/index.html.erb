<div class="container">
  

<div id="most_searched">
  <ul>
<b>Most frequently searched: </b>
<% @most_search = Translation.order(query_number: :desc).limit(5).select("keyword", "query_number") %>
      <% @most_search_keyword = [] %>
      <% @most_search.each do |m| %>
        <li><%= link_to m.keyword + "-" + m.query_number.to_s, translations_index_path(:query => m.keyword), remote: true, class: "most_searched" %></li>

      <% end %>
</ul>
</div>


<div class="row">
    <div class="search" style="margin: auto !important;">
        <form action = "/translations/index" class="button_to" data-remote = "true" id="form_key">
            <input type="text" name = "query" id="translation_query" class="form-control input-sm" placeholder="Search" autocomplete="off" />
            <button type="submit" class="btn btn-primary btn-sm">Search</button>
        </form>
    </div>
 </div>

<div class="row">
  <div class=" col-md-12 " style="margin: auto;">


    <div class="col-md-2 col-md-offset-3">
        <%= image_tag("ajax-loader.gif", :id => "loading-indicator") %>
    </div>

    
    <div id="new_dic" class="col-md-12" style="margin-top: 20px;"></div>

</div>

</div>
</div>